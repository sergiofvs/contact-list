  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug on Edge (attach)",
      "port": 9222,
      "request": "attach",
      "type": "msedge",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "start"
    },
    {
      "name": "debug on Edge (launch)",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "start"
    },
    {
      "name": "debug on Chrome (attach)",
      "port": 9223,
      "request": "attach",
      "type": "chrome",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "start"
    },
    {
      "name": "debug on Chrome (launch)",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "start"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9876/debug.html",
      "preLaunchTask": "npm: test"
    }
  ]
}
